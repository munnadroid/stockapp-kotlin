<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">#A4A4A4</item>
    </style>


    <!--tab style of market -->
    <style name="DefaultTabStyle">
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/DefaultTabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <style name="DefaultTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/main_tab_unselected_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ToolsBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/tools_btn_txt_size</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="LightSpinner" parent="Material.Widget.Spinner.Light">
        <item name="rd_style">@style/Material.Drawable.Ripple.Wave.Light</item>
        <item name="spn_labelEnable">true</item>
        <item name="spn_labelTextColor">@color/white</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="spn_arrowColor">@color/white</item>
        <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
        <item name="spn_dividerColor">@color/white</item>
    </style>



    <style name="LightEditText" parent="Material.Widget.EditText.Light">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="et_dividerColor">@color/white</item>
        <item name="et_labelTextColor">@color/white</item>
        <item name="et_supportTextErrorColor">#FFFF0000</item>
        <item name="et_dividerErrorColor">#FFFF0000</item>
        <item name="et_labelEnable">true</item>
    </style>

    <style name="LightSpinnerItem" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">#D8D8D8</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
    </style>

    <style name="ShareCalcEditTextStyle" parent="LightEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_margin</item>
    </style>
</resources>
