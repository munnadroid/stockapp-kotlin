<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.awecode.stockapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBtnTabLayout"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_home" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBtnTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:weightSum="4">

        <!--<ImageView-->
            <!---->
           <!---->
            <!--android:text="Markets" />-->


        <ImageView
            android:id="@+id/marketsButton"
            style="@style/HomeBottomBtnStyle"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_graphic_eq_black_24dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/newsButton"
            style="@style/HomeBottomBtnStyle"
            android:text="News" />

        <Button
            android:id="@+id/calendarButton"
            style="@style/HomeBottomBtnStyle"
            android:text="Calendar" />

        <Button
            android:id="@+id/portfolioButton"
            style="@style/HomeBottomBtnStyle"
            android:text="Portfolio" />
    </LinearLayout>

</RelativeLayout>
